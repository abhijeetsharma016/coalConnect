<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- ScrollView to enable scrolling for the content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:background="@color/scrollViewBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LinearLayout inside ScrollView to arrange the content vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_card">

            <!-- Title for Coal Mines -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DGMS Guidelines - Coal Mines"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/titleColor"
                android:paddingBottom="8dp"/>

            <!-- Key Points for Coal Mines -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Risk Assessment: Conduct comprehensive risk assessments to identify hazards, assess their impact, and implement control measures to mitigate risks in coal mines."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Safety Management System: Establish a safety management system (SMS) with clear roles, responsibilities, and procedures for ensuring safety in coal mining operations."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Emergency Preparedness: Develop and maintain an emergency response plan that includes evacuation procedures, rescue operations, and communication protocols in case of an emergency."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Training and Competency: Provide regular training to workers on safety protocols, equipment handling, and emergency response to ensure their competency in performing their duties safely."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="16dp"/>

            <!-- Title for Metal Ferrous Mines -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DGMS Guidelines - Metal Ferrous Mines"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/titleColor"
                android:paddingBottom="8dp"/>

            <!-- Key Points for Metal Ferrous Mines -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Hazard Identification: Identify and document potential hazards associated with metal ferrous mining operations, including chemical exposures, mechanical hazards, and ground stability issues."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Control Measures: Implement engineering controls, administrative measures, and personal protective equipment (PPE) to mitigate identified risks in metal ferrous mines."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Monitoring and Review: Regularly monitor the effectiveness of safety measures and review the safety management plan to ensure continuous improvement and compliance with DGMS regulations."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Incident Reporting: Establish a system for reporting, recording, and investigating incidents, accidents, and near misses to prevent recurrence and improve safety practices."
                android:textColor="@color/pointColor"
                android:textSize="16sp"
                android:paddingBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
